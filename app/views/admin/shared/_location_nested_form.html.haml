= f.simple_fields_for :location do |f|
  .form-group
    = f.input :address_line1, autofocus: false, class: 'form-control'
  .form-group
    = f.input :address_line2, autofocus: false, class: 'form-control'
  .form-row
    .form-group.col-md-6
      = f.input :city, autofocus: false, class: 'form-control'
    .form-group.col-md-4
      = f.label :country
      %br/
      = f.select(:country, region_options_for_select(only_us_and_canada, selected: @company.location.state), {include_blank: 'Select Country'}, {class: 'custom-select'})
    .form-group.col-md-2
      = f.input :postal_code, autofocus: false, class: 'form-control'
  .form-group
    = f.select(:state, options_for_select(states_map(only_us_and_canada)), {include_blank: 'Select State'}, {class: 'custom-select'})
