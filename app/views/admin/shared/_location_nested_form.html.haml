= f.fields_for :location do |f|
  .form-group
    = f.label :address_line1
    %br/
    = f.text_field :address_line1, autofocus: false, class: 'form-control'
  .form-group
    = f.label :address_line2
    %br/
    = f.text_field :address_line2, autofocus: false, class: 'form-control'
  .form-group
    = f.label :city
    %br/
    = f.text_field :city, autofocus: false, class: 'form-control'
  .form-group
    = f.label :country
    %br/
    = f.text_field :country, autofocus: false, class: 'form-control'
  .form-group
    = f.label :postal_code
    %br/
    = f.number_field :postal_code, autofocus: false, class: 'form-control' 
  .form-group
    = f.label :state
    %br/
    = f.text_field :state, autofocus: false, class: 'form-control'  