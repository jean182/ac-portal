%h3 Mentor Management
= link_to('New Mentor', new_admin_mentor_path)
|
= render 'admin/shared/links'
%table.table.table-bordered
  %thead
    %tr
      %th{:scope => "col"} Email
      %th{:scope => "col"} Role
      %th{:scope => "col"} Delete
  %tbody
    - @mentors.each do |mentor|
      %tr
        %td
          = mentor.user.email
        %td
          = mentor.user.account_type
        %td
          - if mentor.user.deleted_at.present?
            = button_to "Restore mentor", {controller: "mentors", action: "reactivate_mentor", id: mentor.user.id}, {class: 'btn btn-warning btn-sm', data: { :confirm => "Are you sure?" }} 
          -else
            = link_to("Disable user", admin_mentor_path(mentor), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger btn-sm') unless mentor.user == current_user
