= link_to 'New Member', new_member_company_client_path
%table.table.table-bordered
  %thead
    %tr
      %th{:scope => "col"} Email
      %th{:scope => "col"} Role
      %th{:scope => "col"} Delete
  %tbody
    - @clients.each do |client|
      %tr
        %td
          = client.email
        %td
          = client.account_type
        %td
          - if client.deleted_at.present?
            = button_to "Restore client", {controller: "clients", action: "reactivate_client", id: client.id}, {class: 'btn btn-warning btn-sm', data: { :confirm => "Are you sure?" }}
          -else
            = link_to("Disable user", member_company_client_path(current_user.client_info.company.id,client), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger btn-sm') unless client == current_user
