<% if @message.errors.any? %>
  $('.modal-errors').html("")
  $('.modal-errors').append('<%= j render("shared/errors", object: @message) %>')
<% else %>
  $('.modal').modal('toggle');
  $('#messages-<%= @task_id %>').append('<%= j render (@message) %>')
  $('#trigger-comments-<%= @task_id  %>').find("b").html('(<%= @task.messages.count %>)')
<% end %>