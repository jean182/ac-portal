= render 'shared/company_phase_title_row'
= simple_form_for [current_user.class.to_s.downcase.to_sym, @company, @phase] do |form|
  .row
    .mt-4.col-12.bg-white.border-light-gray.ac-corner-radius.p-4
      %h5.mb-3= "Learning Objectives"
      %div
        = render 'shared/company_phase_learning_objectives_form', form: form
    .mt-4.col-12.bg-white.border-light-gray.ac-corner-radius.p-4
      %h5.mb-3= "Milestones"
      %div
        = render 'shared/company_phase_milestones_form', form: form
    .mt-4.col-12.bg-white.border-light-gray.ac-corner-radius.p-4.mb-4
      %h5.mb-3= "Checklists"
      - @phase.checklists.each_with_index do |checklist, index|
        .div-spacer
          #accordionChecklist.accordion
            .card
              .card-header.bg-white{id: "heading-#{index}"}
                .row
                  .col-sm-8
                    %h6.mb-0=checklist.name
                  .col-sm-4
                    %button.float-right.btn.btn-link{"aria-controls" => "collapse-#{index}", "aria-expanded" => "true", "data-target" => "#collapse-#{index}", "data-toggle" => "collapse", type: "button"}
                      = fa_icon "angle-down", class: "fa-2x text-dark"
              .collapse{id: "collapse-#{index}", "aria-labelledby" => "heading-#{index}", "data-parent" => "#accordionChecklist"}
                .card-body
                  - checklist.tasks.each do |task|
                    %ul.list-unstyled
                      %li=task.description
